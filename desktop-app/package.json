{
  "name": "reelsmaxing",
  "version": "1.0.0",
  "description": "Scroll Instagram Reels while AI generates, auto-pause when ready",
  "main": "main.js",
  "scripts": {
    "start": "npm run build:css && npm run build:react && electron .",
    "build:css": "npx tailwindcss -i ./src/styles.css -o ./dist-react/styles.css",
    "build:react": "esbuild src/App.tsx --bundle --outfile=dist-react/bundle.js --loader:.tsx=tsx --loader:.ts=ts --define:process.env.NODE_ENV=\\\"production\\\"",
    "build": "npm run build:css && npm run build:react && electron-builder --win portable --config.win.signAndEditExecutable=false"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "esbuild": "^0.19.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "typescript": "^5.0.0",
    "tailwindcss": "^3.4.0"
  },
  "build": {
    "appId": "com.reelsmax.app",
    "productName": "ReelsMaxing",
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "dist-react/**/*",
      "ReelsMax_logo.jpg"
    ],
    "win": {
      "target": "portable",
      "signAndEditExecutable": false,
      "icon": "reelsmaxing_logo2.ico"
    },
    "portable": {
      "artifactName": "ReelsMaxing.exe"
    }
  }
}
