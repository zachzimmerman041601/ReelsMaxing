{
  "name": "reelsmax",
  "version": "1.0.0",
  "description": "Scroll Instagram Reels while AI generates, auto-pause when ready",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win portable --config.win.signAndEditExecutable=false"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.reelsmax.app",
    "productName": "ReelsMax",
    "win": {
      "target": "portable",
      "signAndEditExecutable": false
    },
    "portable": {
      "artifactName": "ReelsMax.exe"
    }
  }
}
